<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Troca de senha</title>
  </head>
  <body>
    <form id="changePassword">
      <h1>Troque sua senha</h1>
      <input type="password" name="" id="pass1" />
      <input type="password" name="" id="pass2" />
      <button>Confirmar</button>
    </form>

    <script>
      const token = "<%= token %>";
      const URL = "<%= URL %>";
      const form = document.querySelector("#changePassword");
      const pass1 = document.querySelector("#pass1");
      const pass2 = document.querySelector("#pass2");
      form.addEventListener("submit", async (event) => {
        event.preventDefault()
        if (pass1.value === pass2.value) {
          const response = await fetch(`${URL}/user/password/update/${token}`, {
            method: "PUT",
            body: JSON.stringify({ password: pass1.value }),
            headers: {
              "Content-Type": "application/json; charset=UTF-8",
            },
          }).then((response) => response.json());
          console.log(response)
        }
      });
    </script>
  </body>
</html>
